{
    "[javascript]": {
        "editor.defaultFormatter": "vscode.typescript-language-features"
    },
    "[typescript]": {
        "editor.defaultFormatter": "vscode.typescript-language-features"
    },
    "[typescriptreact]": {
        "editor.defaultFormatter": "vscode.typescript-language-features"
    },
    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "git.ignoreLimitWarning": true,
    "editor.formatOnSave": true,
    "search.exclude": {
        "**/.git": true,
        "**/node_modules": true
    },
    "files.exclude": {
        "**/.git": true,
        "**/node_modules": true
    }
}
